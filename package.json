{
  "name": "herb-traceability-system",
  "version": "1.0.0",
  "description": "Ayurvedic herb traceability system with blockchain integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "install-deps": "node install-dependencies.js",
    "setup": "node setup-blockchain.js",
    "verify": "node verify-setup.js",
    "migrate": "truffle migrate",
    "migrate:dev": "truffle migrate --network development",
    "migrate:sepolia": "truffle migrate --network sepolia",
    "deploy:simple": "node deploy-simple.js",
    "deploy:minimal": "node deploy-minimal.js",
    "deploy:direct": "node deploy-direct.js",
    "start:system": "node start-system.js",
    "dev:full": "concurrently \"npm start\" \"cd frontend && npm start\"",
    "deploy": "truffle deploy --network",
    "ipfs": "ipfs daemon",
    "ganache": "ganache --port 8545 --accounts 10 --defaultBalanceEther 100",
    "setup:local": "node setup-local-blockchain.js",
    "demo:start": "concurrently \"npm run ganache\" \"npm run migrate:dev\" \"npm start\"",
    "demo:full": "npm run setup:local && npm run demo:start",
    "compile": "hardhat compile",
    "deploy:local": "hardhat run migrations/1_deploy_contracts.js --network localhost",
    "deploy:sepolia": "hardhat run migrations/1_deploy_contracts.js --network sepolia",
    "node": "hardhat node",
    "test": "hardhat test"
  },
  "keywords": [
    "blockchain",
    "traceability",
    "ayurvedic",
    "herbs",
    "supply-chain"
  ],
  "author": "HerbTraceability Team",
  "license": "MIT",
  "dependencies": {
    "@truffle/hdwallet-provider": "^2.1.15",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ipfs-http-client": "^58.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "web3": "^4.3.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.1",
    "@nomicfoundation/hardhat-verify": "^3.0.2",
    "@openzeppelin/contracts": "^4.9.3",
    "concurrently": "^8.2.2",
    "ethers": "^6.15.0",
    "ganache": "^7.9.1",
    "hardhat": "^3.0.6",
    "nodemon": "^3.0.2",
    "solc": "^0.8.19",
    "truffle": "^5.11.5"
  }
}
